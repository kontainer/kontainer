pipeline {
   environment {
     FOO = "foo"
   }
   dir ('backend') {
    sh 'pwd'
   }

   agent {
     dockerfile true
   }
   stages {
       stage("first") {
           steps {
               sh "echo ${FOO}"
               sh "ls -a"
               sh "pwd"
               cd backend
               which docker
               which docker-compose
               cd backend
               docker-compose build
           }
       }
   }
}